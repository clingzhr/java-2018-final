<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="mywidget" prefHeight="800.0" prefWidth="1200.0" stylesheets="GUI_calabash.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Battle.MyController">
   <children>
      <BorderPane prefHeight="650.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <Canvas fx:id="mycanvas" height="500.0" width="1000.0" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <MenuBar fx:id="mymenu" prefHeight="35.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="文件">
                  <items>
                    <MenuItem fx:id="init" mnemonicParsing="false" onAction="#init_HULUWA" text="初始化" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="改变阵型">
                  <items>
                    <MenuItem fx:id="changeFormOfHUluwa" mnemonicParsing="false" onAction="#set_queue_Calash" text="葫芦娃改变阵型" />
                    <MenuItem fx:id="change" mnemonicParsing="false" onAction="#set_queue_monster" text="小怪改变阵型" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="开始">
                    <items>
                      <MenuItem fx:id="start" mnemonicParsing="false" onAction="#startfight" text="开始战斗!" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="加载">
                    <items>
                      <MenuItem fx:id="review" mnemonicParsing="false" onAction="#reviewAction" text="回放" />
                    </items>
                  </Menu>
              </menus>
            </MenuBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
